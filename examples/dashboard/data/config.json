{
  "app": {
    "name": "ESP32 MVC Application",
    "env": "development",
    "debug": true
  },
  "server": {
    "host": "0.0.0.0",
    "port": 80
  },
  "wifi": {
    "ssid": "YOUR_WIFI_SSID",
    "password": "YOUR_WIFI_PASSWORD"
  },
  "database": {
    "host": "localhost",
    "port": 3306,
    "name": "esp32_app",
    "user": "root",
    "password": ""
  },
  "security": {
    "jwt_secret": "your-secret-key-here",
    "session_timeout": 3600
  },
  "features": {
    "cors_enabled": true,
    "rate_limiting": true,
    "logging": true
  }
}
